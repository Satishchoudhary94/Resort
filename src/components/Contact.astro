<section id="contact" class="section-padding">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 mb-4 mb-lg-0" data-aos="fade-right">
        <h2 class="section-title">Contact Us</h2>
        <p class="lead mb-4">Reach out to us for bookings and inquiries</p>
        
        <div class="contact-info">
          <div class="d-flex mb-4">
            <div class="contact-icon me-3">
              <i class="fas fa-map-marker-alt text-primary fs-3"></i>
            </div>
            <div>
              <h5>Location</h5>
              <p>Calangute Beach Road, Bardez, North Goa, 403516, India</p>
            </div>
          </div>
          
          <div class="d-flex mb-4">
            <div class="contact-icon me-3">
              <i class="fas fa-phone-alt text-primary fs-3"></i>
            </div>
            <div>
              <h5>Phone</h5>
              <p>+91 832 123 4567<br>+91 832 765 4321</p>
            </div>
          </div>
          
          <div class="d-flex mb-4">
            <div class="contact-icon me-3">
              <i class="fas fa-envelope text-primary fs-3"></i>
            </div>
            <div>
              <h5>Email</h5>
              <p>info@sereneshores.com<br>reservations@sereneshores.com</p>
            </div>
          </div>
          
          <div class="social-links mt-4">
            <h5>Connect With Us</h5>
            <div class="d-flex gap-3 mt-2">
              <a href="#" class="social-link">
                <i class="fab fa-facebook-f"></i>
              </a>
              <a href="#" class="social-link">
                <i class="fab fa-instagram"></i>
              </a>
              <a href="#" class="social-link">
                <i class="fab fa-twitter"></i>
              </a>
              <a href="#" class="social-link">
                <i class="fab fa-tripadvisor"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-icon {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .social-link {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--primary-color);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }
  
  .social-link:hover {
    background-color: var(--accent-color);
    color: white;
    transform: translateY(-3px);
  }
</style>